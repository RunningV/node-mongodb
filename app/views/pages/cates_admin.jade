extends ../layout

block content
  .container
    .row
      form.form-horizontal(method="post" action="/admin/cates")
        .form-group
          label.col-sm-2.control-label(for="inputCates") 电影分类
          .col-sm-10
            input#inputCates.form-control(type="text", name="cates[name]", value=cates.name)
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type="submit") 录入
