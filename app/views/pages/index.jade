extends ../layout

block content
  .container
    .row
      each cate in cates
        if cate.movies && cate.movies.length
          .panel.panel-info
            .panel-heading
              h3 
                a(href="/results?cate=#{cate._id}&p=0") #{cate.name}
            .panel-body
              each item in cate.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('http') > -1
                        img(src="#{item.poster}", alt="#{item.title}")
                      else
                        img(src="/img/#{item.poster}", alt="#{item.title}")
                    .caption
                      h3 #{item.title}
                      p: a.btn.btn-primary(href="/movie/#{item._id}") 观看预告片					